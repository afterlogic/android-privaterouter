<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:id="@+id/ll_background"
    android:orientation="horizontal"
    android:paddingStart="@dimen/padding_all_element_small"
    android:paddingTop="@dimen/padding_all_element_medium"
    android:paddingEnd="@dimen/padding_all_element_small"
    android:paddingBottom="@dimen/padding_all_element_medium">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/margin_all_element_medium"
        android:adjustViewBounds="true"
        android:paddingEnd="@dimen/padding_all_element_medium"
        android:src="@drawable/ic_menu_send" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:ellipsize="end"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingStart="@dimen/padding_all_element_large"
        android:paddingEnd="@dimen/margin_all_element_medium"
        android:text="@string/all_inbox" />

    <TextView
        android:id="@+id/tv_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/margin_all_element_medium"
        android:background="@drawable/shape_round_primary_color"
        android:gravity="center"
        android:maxLines="1"
        android:text="5" />

</LinearLayout>