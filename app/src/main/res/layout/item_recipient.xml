<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/checkBoxGrayRoundShape"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:drawableEnd="@android:drawable/ic_menu_close_clear_cancel"
    android:focusable="auto"
    android:focusableInTouchMode="true"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_recipient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingStart="@dimen/padding_all_element_medium"
        android:paddingTop="@dimen/padding_all_element_small"
        android:paddingEnd="@dimen/padding_all_element_medium"
        android:paddingBottom="@dimen/padding_all_element_small"
        android:singleLine="true"
        android:text="testUserName"
        android:textColor="@android:color/black" />

    <ImageButton
        android:id="@+id/ib_recipient_remove"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:adjustViewBounds="true"
        android:background="@null"
        android:paddingStart="@dimen/padding_all_element_small"
        android:paddingTop="@dimen/padding_all_element_small"
        android:paddingEnd="@dimen/padding_all_element_medium"
        android:paddingBottom="@dimen/padding_all_element_small"
        app:srcCompat="@drawable/ic_cross_circled_transp_16dp" />
</LinearLayout>