<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar"  >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="checkBoxGrayRoundShape">
        <item name="android:background">@drawable/compose_recipient_button_round_gray</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="WhiteEditText" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <style name="AccentColorDialogElements">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="ListDropdownSwitcher">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/padding_all_element_large</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="InputLayout">
        <item name="android:textColorHint">@color/color_black</item>
    </style>

    <style name="EditTextSingleLine">
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>
</resources>
